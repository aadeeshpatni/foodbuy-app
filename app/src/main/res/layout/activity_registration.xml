<!--        android:spinnerMode="dropdown"-->
<!--        app:layout_constraintStart_toEndOf="@+id/userType"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/password" />-->

    <EditText
        android:id="@+id/storeName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/field_selector"
        android:ems="10"
        android:fontFamily="@font/exo_medium"
        android:foregroundTint="@color/colorPrimaryDark"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/userType"
        app:layout_constraintTop_toBottomOf="@+id/storeName_head" />

    <EditText
        android:id="@+id/street"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/field_selector"
        android:ems="10"
        android:fontFamily="@font/exo_medium"
        android:foregroundTint="@color/colorPrimaryDark"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/storeName"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/field_selector"
        android:ems="10"
        android:fontFamily="@font/exo_medium"
        android:foregroundTint="@color/colorPrimaryDark"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/pincode"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/field_selector"
        android:ems="10"
        android:fontFamily="@font/exo_medium"
        android:foregroundTint="@color/colorPrimaryDark"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/city"
        app:layout_constraintStart_toStartOf="@+id/city"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/field_selector"
        android:ems="10"
        android:fontFamily="@font/exo_medium"
        android:foregroundTint="@color/colorPrimaryDark"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/street"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/pincode"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/field_selector"
        android:ems="10"
        android:fontFamily="@font/exo_medium"
        android:foregroundTint="@color/colorPrimaryDark"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/state"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/exo_medium"
        android:text="Username:"
        android:textColor="@color/violet"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/exo_medium"
        android:text="Street:"
        android:textColor="@color/violet"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/storeName"
        app:layout_constraintTop_toBottomOf="@+id/storeName" />

    <TextView
        android:id="@+id/storeName_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/exo_medium"
        android:text="Name of Store:"
        android:textColor="@color/violet"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/userType"
        app:layout_constraintTop_toBottomOf="@+id/userGroup" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/exo_medium"
        android:text="State:"
        android:textColor="@color/violet"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/street"
        app:layout_constraintTop_toBottomOf="@+id/street" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/exo_medium"
        android:text="Pincode:"
        android:textColor="@color/violet"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/state"
        app:layout_constraintTop_toBottomOf="@+id/state" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/exo_medium"
        android:text="City:"
        android:textColor="@color/violet"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/pincode"
        app:layout_constraintTop_toBottomOf="@+id/pincode" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/exo_medium"
        android:text="Phone Number:"
        android:textColor="@color/violet"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/city"
        app:layout_constraintTop_toBottomOf="@+id/city" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/exo_medium"
        android:text="Password:"
        android:textColor="@color/violet"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <RadioGroup
        android:id="@+id/userGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/userType"
        app:layout_constraintTop_toBottomOf="@+id/userType">>

        <RadioButton
            android:id="@+id/consumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="true"
            android:fontFamily="@font/exo_semibold"
            android:onClick="checkButton"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Consumer"
            android:textColor="@drawable/text_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/retailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:fontFamily="@font/exo_semibold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Retailer"
            android:onClick="checkButton"
            android:textColor="@drawable/text_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/wholesaler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:fontFamily="@font/exo_semibold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Wholesaler"
            android:onClick="checkButton"
            android:textColor="@drawable/text_selector"
            android:textSize="12sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>